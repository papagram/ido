<p id="notice"><%= notice %></p>

<div class="mui-row">
  <div class="mui-col-md-12">
    <h1>Tasks</h1>
    <%= link_to 'New Task', new_task_path, class: 'mui-btn mui-btn--flat mui-btn--primary mui--pull-right', id: 'new-form-link' %>
  </div>
</div>

<div id="new-task-wrapper" class="mui-panel display-none">
  <%= render 'form', task: @task %>
</div>

<table class="mui-table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Status</th>
      <th>Start at</th>
      <th>Closing at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tasks-data"></tbody>
</table>

<script type="text/html" id="tasks-template">
  <tr>
    <td>{{- subject }}</td>
    <td>{{- body }}</td>
    <td>{{- status }}</td>
    <td>{{- start_at }}</td>
    <td>{{- closing_at }}</td>
    <td><a href="/tasks/{{- id }}">Show</a></td>
    <td><a href="/tasks/{{- id }}/edit">Edit</a></td>
    <td><a href="/tasks/{{- id }}" data-method="delete">Destroy</a></td>
  </tr>
</script>

<script>
  $(function() {
    IDO.tasks.init();
  });
</script>
